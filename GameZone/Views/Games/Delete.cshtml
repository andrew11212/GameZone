@model GameZone.Models.Game

@{
    ViewData["Title"] = "Delete Game";
}

<h1>Delete Game</h1>

<div>
    <h4>Are you sure you want to delete this game?</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.name</dd>

        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.description</dd>

        <dt class="col-sm-2">Category</dt>
        <dd class="col-sm-10">@Model.Category?.Name </dd>

        <dt class="col-sm-2">Cover</dt>
        <dd class="col-sm-10">
            <img src="@Url.Content($"~/{FileSetting.ImagePath}/{Model.cover}")" alt="@Model.name" style="width: 100px; height: auto;" />
        </dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" name="id" value="@Model.id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
